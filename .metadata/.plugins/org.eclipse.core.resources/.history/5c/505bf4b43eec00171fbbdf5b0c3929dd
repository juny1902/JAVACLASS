
public class CarExample {
	public static void getDyno(Motion a) {

		for (int t = 1; t < 30; t++) {
			if (t % 5 == 0)
				a.Accelate();

		}
		for (int t = 1; t < 5; t++) {
			if (t % 5 == 0)
				a.Brake();
		}
		for (int i = -180; i < 180; i += 60) {
			a.turn(i);
		}
		for (int i = 180; i > -180; i -= 60) {
			a.turn(i);
		}
	}

	public static void main(String[] args) {
		Car tico = new Car("Tico", 3, 900, 10, 2);
		Car accent = new Car("Accent", 4, 1500, 14, 2);
		Car grand = new Car("Grandeur", 4, 2700, 19, 4);
		Car benz = new Car("Benz", 8, 5000, 20, 4);
		Truck monster = new Truck("Monster", 16, 1300, 30, 6,15000);
		tico.carInfo();
		getDyno(tico);

		accent.carInfo();
		getDyno(accent);

		grand.carInfo();
		getDyno(grand);

		benz.carInfo();
		getDyno(benz);

		monster.carInfo();
		getDyno(monster);
	}
}
